@model List<Word>
@{
    ViewData["Title"] = "Select Word for Group";
}

<h1>Add Existing Word to Group</h1>
<h4>Group: @ViewBag.GroupName</h4>

<div class="row">
    <div class="col-md-10">
        <form method="get" class="mb-4">
            <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
            <div class="input-group">
                <input type="text" name="search" value="@ViewBag.SearchText"
                       class="form-control" placeholder="Search for words..." />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.SearchText))
        {
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Search Results (@Model.Count words found)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Word</th>
                                        <th>Language</th>
                                        <th>Class</th>
                                        <th>Current Group</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var word in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Words" asp-action="Details" asp-route-id="@word.WordId">
                                                    @word.Word_text
                                                </a>
                                            </td>
                                            <td>@word.Language</td>
                                            <td>@word.Class</td>
                                            <td>
                                                @if (word.GroupID.HasValue)
                                                {
                                                    <span class="badge bg-secondary">
                                                        @word.GroupWord?.Name
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Group</span>
                                                }
                                            </td>
                                            <td>
                                                <form asp-action="AddWordToGroup" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="wordId" value="@word.WordId" />
                                                    <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                                                    <button type="submit" class="btn btn-success btn-sm"
                                                            onclick="return confirm('Add this word to the group?');">
                                                        <i class="bi bi-plus-circle"></i> Add to Group
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No words found matching "@ViewBag.SearchText".
                </div>
            }
        }
        else
        {
            <div class="alert alert-secondary">
                <i class="bi bi-search"></i> Enter a search term to find words to add to this group.
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Details" asp-route-id="@ViewBag.GroupId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Group
    </a>
</div>