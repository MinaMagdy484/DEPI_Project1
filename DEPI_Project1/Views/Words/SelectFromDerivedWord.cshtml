@model DrevWord

@{
    ViewData["Title"] = "Select From Derived Word";
}

<h1>Select From Words</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SelectFromDerivedWord" asp-route-WordId1="@ViewBag.WordId1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for selecting existing words -->
            <div class="form-group">
                <label for="RelatedWordID" class="control-label">Select Existing Word</label>
                <select asp-for="RelatedWordID" class="form-control" asp-items="ViewBag.Words"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Link Word" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.WordId1">Back to Meaning Details</a>
    <a asp-controller="Words" asp-action="GoBack">Go Back</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
